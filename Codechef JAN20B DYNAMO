#include<bits/stdc++.h>
using namespace std;
int main(){
    
    
       int n,q;
       cin>>n>>q;
       int ar[n];
       for(int i=0;i<n;i++){
           cin>>ar[i];
       }
       while(q--){
           int l, r;
           cin>>l>>r;
           l=l-1;r=r-1; // 0 indexing 
           int ll=l;
           int count=0; vector<int>v;
           while(l<r){
               
               int i=l;int k=0;
               while(i+1<=r){
                   if(ar[i]<ar[i+1]){
                       k=i+1;
                       i++;
                   }
                   else{
                       break;
                   }
               }
               if(l<k){
               v.push_back(l);
               v.push_back(k);
               }
              if(k==0)
              l++;
              else 
              l=k+1;
           }
          
           vector<int>vv;
           while(ll<r){
               
               int i=ll;int k=0;
               while(i+1<=r){
                   if(ar[i]>ar[i+1]){
                       k=i+1;
                       i++;
                   }
                   else{
                       break;
                   }
               }
               if(ll<k){
               vv.push_back(ll);
               vv.push_back(k);
               }
              if(k==0)
              ll++;
              else 
              ll=k+1;
           }
         
          int v1=v.size()/2;
          int v2=vv.size()/2;
          if(v1==v2)
          cout<<"YES"<<endl;
          else
          cout<<"NO"<<endl;
          
           
       }
}
